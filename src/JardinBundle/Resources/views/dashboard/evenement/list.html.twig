{% extends 'base_admin.html.twig' %}
      {% block body %}

          <div class="card">
              <div class="card-body">

                  <div class="row">
                      <div class="col-12 mb-1">
                          <h4>Liste Evenements</h4>
                          <hr>
                      </div>

                      <div class="col-12 mt-1" style="text-align: end;">
                          <a class="btn btn-teal" href={{ path('add_evenement') }}>
                              Ajouter
                          </a>
                      </div>

                      <div class="col-12 mt-1 mb-4">
                          <table class="table table-hover">

                              <thead>
                              <th>Titre</th>
                              <th>Date DÃ©but</th>
                              <th>Date Fin</th>
                              <th>Type</th>
                              <th>Description</th>
                              <th>active</th>
                              <th></th>
                              </thead>

                              <tbody>
                              {% for e in events %}
                                  <tr>
                                      <td> {{ e.titre }} </td>
                                      <td>{{ e.dateDebut | date("m/d/Y") }}</td>
                                      <td>{{ e.dateFin | date("m/d/Y") }}</td>
                                      <td>{{ e.type }}</td>
                                      <td>{{ e.description }}</td>
                                      <td>
                                          {% if e.active %}
                                              <i class="mdi mdi-check-circle text-success"
                                                 style="font-size:1.5rem;"></i>
                                          {% else %}
                                              <i class="mdi mdi-cancel text-danger"
                                                 style="font-size:1.5rem;"></i>
                                          {% endif %}
                                      </td>

                                      <td>
                                          <a class="btn btn-primary btn-rounded"
                                             href="{{ path('update_evenement',{'id':e.id}) }}">
                                              Modifier
                                          </a>
                                          <a class="btn btn-danger btn-rounded"
                                             href="{{ path('delete_evenement',{'id':e.id}) }}">
                                              Supprimer
                                          </a>

                                          <a class="btn btn-icon btn-info"
                                             href="{{ path('details_evenement',{'id':e.id}) }}">
                                              <i class="mdi mdi-comment-quote"></i>
                                          </a>

                                      </td>

                                  </tr>
                              {% endfor %}
                              </tbody>

                          </table>

                      </div>

                  </div>

              </div>

          </div>

      {% endblock %}